= form_for @user do |f|
  -if @user.errors.any?
    #error_explanation
      %h2= "#{pluralize(@user.errors.count, "error")} prohibited this user from being saved:"
      %ul
        - @user.errors.full_messages.each do |msg|
          %li= msg

  .field
    =f.label      :login
    =f.text_field :login
    %br
    =f.label      :juxtapose_id, "Juxtapose ID"
    =f.text_field :juxtapose_id
  .actions
    = f.submit 'Save'
